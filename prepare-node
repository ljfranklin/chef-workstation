#!/bin/bash

set -eu

RED='\033[0;31m'
GREEN='\033[0;32m'
NC='\033[0m'

if [ "$#" -ne 1 ]; then
  echo -e "${RED}Expected name of node as argument${NC}"
  exit 1
fi
NODE_NAME=${1}

CHEF_OPTS=${CHEF_OPTS:-}
CHEF_DEBUG=${CHEF_DEBUG:-}
if [ "${CHEF_DEBUG}" == true ]; then
  CHEF_OPTS="${CHEF_OPTS} -l debug"
fi

MY_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

pushd ${MY_DIR}

  NODE_FILE=nodes/${NODE_NAME}.json
  if [ ! -e ${NODE_FILE} ]; then
    echo -e "${RED}Node file ${NODE_FILE} does not exist${NC}"
    exit 1
  fi

  echo -e "Preparing workstation..."
  sudo chef-client \
    --local-mode \
    -c config/solo.rb \
    -j nodes/${NODE_NAME}.json \
    ${CHEF_OPTS}
popd

echo -e "${GREEN}Successfully prepared workstation${NC}"
