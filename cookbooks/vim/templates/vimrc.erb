execute pathogen#infect()

" Set default options
set nu
set nowrap
set tabstop=2
set shiftwidth=2
set expandtab
set t_Co=256

nmap ,, :b#<CR>

<% if node['vim']['plugins'].has_key?('nerdtree') %>
nnoremap \ :NERDTreeToggle<CR>
<% end %>

<% if node['vim']['plugins'].has_key?('solarized') %>
set background=dark
colorscheme solarized
<% end %>
