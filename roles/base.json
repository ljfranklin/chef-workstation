{
  "description": "Base role used to setup all my personal workstations",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "run_list": [
    "recipe[ufw]",
    "recipe[direnv]",
    "recipe[terminal-utilities]",
    "recipe[git]",
    "recipe[nodejs]",
    "recipe[firefox]",
    "recipe[go]",
    "recipe[gimp]",
    "recipe[spotify]",
    "recipe[docker]",
    "recipe[ruby]",
    "recipe[steam]",
    "recipe[shell-tweaks]",
    "recipe[bash-it]",
    "recipe[terminator]",
    "recipe[xbindkeys]",
    "recipe[xmodmap]",
    "recipe[vim]"
  ],
  "default_attributes": {
    "git": {
      "name": "Lyle Franklin",
      "email": "lylejfranklin@gmail.com"
    },
    "bash-it": {
      "theme": "zork",
      "aliases": [
        "general",
        "git",
        "clipboard"
      ],
      "plugins": [
        "base",
        "sshagent",
        "ruby"
      ],
      "completion": [
        "git"
      ],
      "custom": {
        "plugins": [
          "direnv",
          "history-arrow-keys",
          "go",
          "chruby-auto",
          "vim"
        ]
      }
    },
    "go": {
      "version": "1.9.2",
      "gopath": "/home/lyle/go"
    },
    "firewall": {
      "allow_ssh": true
    }
  }
}
