{
  "description": "Base role used to setup all my personal workstations",
  "chef_type": "role",
  "run_list": [
    "recipe[apt]",
    "recipe[diodon]",
    "recipe[direnv]",
    "recipe[terminal-utilities]",
    "recipe[git]",
    "recipe[nodejs]",
    "recipe[chrome]",
    "recipe[firefox]",
    "recipe[go]",
    "recipe[spotify]",
    "recipe[ssh-server]",
    "recipe[docker]",
    "recipe[steam]",
    "recipe[skype]",
    "recipe[vagrant]",
    "recipe[shell-tweaks]",
    "recipe[bash-it]",
    "recipe[yubikey]",
    "recipe[vim]"
  ],
  "default_attributes": {
    "git": {
      "name": "Lyle Franklin",
      "email": "lylejfranklin@gmail.com"
    },
    "bash-it": {
      "theme": "zork",
      "aliases": [
        "general",
        "git",
        "clipboard"
      ],
      "plugins": [
        "base"
      ],
      "completion": [
        "git"
      ],
      "custom": {
        "plugins": [
          "direnv",
          "history-arrow-keys",
          "go"
        ]
      }
    },
    "go": {
      "version": "1.7.4",
      "gopath": "/home/lyle/go"
    },
    "firewall": {
      "allow_ssh": true
    }
  }
}
