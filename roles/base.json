{
  "description": "Base role used to setup all my personal workstations",
  "chef_type": "role",
  "run_list": [
    "recipe[apt]",
    "recipe[direnv]",
    "recipe[terminal-utilities]",
    "recipe[git]",
    "recipe[chrome]",
    "recipe[firefox]",
    "recipe[vim]",
    "recipe[spotify]",
    "recipe[ssh-server]",
    "recipe[docker]",
    "recipe[steam]",
    "recipe[skype]",
    "recipe[vagrant]",
    "recipe[ubuntu-tweaks]",
    "recipe[shell-tweaks]",
    "recipe[bash-it]",
    "recipe[terminator]",
    "recipe[go]"
  ],
  "default_attributes": {
    "git": {
      "name": "Lyle Franklin",
      "email": "lylejfranklin@gmail.com"
    },
    "bash-it": {
      "theme": "luan",
      "aliases": [
        "general",
        "git",
        "clipboard"
      ],
      "plugins": [
        "base"
      ],
      "completion": [
        "git"
      ],
      "custom": {
        "plugins": [
          "direnv",
          "history-arrow-keys",
          "go"
        ]
      }
    },
    "go": {
      "version": "1.7.4",
      "gopath": "/home/lyle/go"
    },
    "vim": {
       "plugins": {
         "nerdtree": "https://github.com/scrooloose/nerdtree.git",
         "sensible": "https://github.com/tpope/vim-sensible.git",
         "solarized": "https://github.com/altercation/vim-colors-solarized.git",
         "commentary": "https://github.com/tpope/vim-commentary.git"
       }
    },
    "firewall": {
      "allow_ssh": true
    }
  }
}
