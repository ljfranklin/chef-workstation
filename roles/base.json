{
  "description": "Base role used to setup all my personal workstations",
  "run_list": [
    "recipe[apt]",
    "recipe[terminal-utilities]",
    "recipe[git]",
    "recipe[chrome]",
    "recipe[firefox]",
    "recipe[vim]",
    "recipe[spotify]",
    "recipe[ssh-server]",
    "recipe[docker]",
    "recipe[steam]",
    "recipe[dropbox]",
    "recipe[skype]",
    "recipe[vagrant]",
    "recipe[ubuntu-tweaks]",
    "recipe[shell-tweaks]",
    "recipe[bash-it]",
    "recipe[terminator]"
  ],
  "default_attributes": {
    "my_user": "lyle",
    "git": {
      "name": "Lyle Franklin",
      "email": "lylejfranklin@gmail.com"
    },
    "bash-it": {
      "theme": "luan",
      "aliases": [
        "general",
        "clipboard"
      ],
      "custom": {
        "aliases": [
          "gst",
          "mkcd"
        ],
        "plugins": [
          "history-arrow-keys"
        ]
      }
    },
    "vim": {
       "plugins": {
         "nerdtree": "https://github.com/scrooloose/nerdtree.git",
         "sensible": "https://github.com/tpope/vim-sensible.git",
         "solarized": "https://github.com/altercation/vim-colors-solarized.git",
         "commentary": "https://github.com/tpope/vim-commentary.git"
       }
    }
  }
}
